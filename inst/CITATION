year <- sub("-.*", "", meta$Date)
note <- sprintf("R package version %s", meta$Version)
url <- "https://cran.r-project.org/package=owd"

bibentry(bibtype = "Manual",
         title = "{owd}: A package to open your current working directory from {R}",
         author = c(person(c("Benjamin", "G."), "Feakins"),
                    person(c("Benjamin", "J."), "Cairns")),
         year = year,
         note = note,
         url = url,
         header = "To cite owd in publications use:",
         key = "owd-package",

         textVersion = paste("Benjamin G. Feakins and Benjamin J. Cairns",
                             paste0("(", year, ")."),
                             "owd: A package to open your current working directory from R.",
                             paste0(note, ", "),
                             url)
)
