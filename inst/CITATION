year <- sub("-.*", "", meta$Date)
note <- sprintf("R package version %s", meta$Version)
url <- meta$URL

bibentry(bibtype = "Manual",
         title = "{owd}: A package to open your current working directory from {R}",
         author = person(c("Benjamin", "G."), "Feakins"),
         year = year,
         note = note,
         url = url,
         header = "To cite owd in publications use:",
         key = "owd-package",

         textVersion = paste("Benjamin G. Feakins",
                             paste0("(", year, ")."),
                             "owd: A package to open your current working directory from R.",
                             paste0(note, ", "),
                             paste("URL", url))
)
